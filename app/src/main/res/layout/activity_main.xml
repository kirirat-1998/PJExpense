<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".MainActivity"
    android:background="@color/orageOn">


    <GridLayout
        android:layout_width="350dp"
        android:layout_height="348dp"
        android:layout_centerInParent="true"
        android:columnCount="1"
        android:maxWidth="500dp"
        android:minWidth="350dp"
        android:background="@drawable/bg_mode">

        <TextView />
        <TextView />

        <Button
            android:layout_width="153dp"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_select_mode"
            android:text="เลือกโหมด" />

        <TextView />
        <TextView />
        <TextView />

        <Button
            android:id="@+id/btn_EasyMode"
            android:layout_height="43dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_mode"
            android:text="    โหมดอย่างง่าย    " />


        <TextView />
        <TextView />

        <Button
            android:id="@+id/btn_NormalMode"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_mode"
            android:text="       โหมดทั่วไป       " />


    </GridLayout>

</RelativeLayout>