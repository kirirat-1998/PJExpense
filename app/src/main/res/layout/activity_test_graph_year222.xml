<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestGraphYear222">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_easy2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorOrange"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ตั้งแต่   "
            android:textSize="35px" />

        <EditText
            android:id="@+id/edit_graph_start"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:background="@drawable/shape_month_year"
            android:textColor="@color/primary"
            android:inputType="numberDecimal"
            android:textSize="45px" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="     "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ถึง   "
            android:textSize="35px" />

        <EditText
            android:id="@+id/edit_graph_end"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:background="@drawable/shape_month_year"
            android:textColor="@color/primary"
            android:inputType="numberDecimal"
            android:textSize="45px" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="     "/>
        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="go"
            android:onClick="submit_startToEnd"
            android:layout_gravity="center"
            android:background="@drawable/button_go"
            android:textColor="#ffffff"
            android:id="@+id/submit_graph_year2"/>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/graph_container2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

    </RelativeLayout>

</RelativeLayout>