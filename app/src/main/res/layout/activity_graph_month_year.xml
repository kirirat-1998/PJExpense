<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GraphMonthYear">

    <LinearLayout
        android:id="@+id/lineargggg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorOrange"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ปี พ.ศ.    "
                android:textSize="45px" />

            <EditText
                android:id="@+id/edit_graph_year_month"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:background="@drawable/shape_month_year"
                android:textColor="@color/primary"
                android:inputType="numberDecimal"
                android:textSize="45px" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="     "/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="GO"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/button_go"
                android:onClick="goMonthToMonth"
                android:id="@+id/submit_graph_year_month"/>
        </androidx.appcompat.widget.Toolbar>

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorOrange"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ตั้งแต่ "
                android:textSize="35px" />
            <Spinner
                android:id="@+id/spinner_monthsss"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:popupBackground="@drawable/shape_edit"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp" />

<!--            <TextView-->
<!--                android:id="@+id/graph_my_start"-->
<!--                android:layout_width="80dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textAlignment="center"-->
<!--                android:layout_gravity="center"-->
<!--                android:background="@drawable/shape_month_year"-->
<!--                android:textColor="@color/primary"-->
<!--                android:inputType="numberDecimal"-->
<!--                android:textSize="45px" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ถึง "
                android:textSize="35px" />
            <Spinner
                android:id="@+id/spinner_montheeee"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:popupBackground="@drawable/shape_edit"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp" />

<!--            <TextView-->
<!--                android:id="@+id/graph_my_end"-->
<!--                android:layout_width="80dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textAlignment="center"-->
<!--                android:layout_gravity="center"-->
<!--                android:background="@drawable/shape_month_year"-->
<!--                android:textColor="@color/primary"-->
<!--                android:inputType="numberDecimal"-->
<!--                android:textSize="45px" />-->

        </androidx.appcompat.widget.Toolbar>

    </LinearLayout>


    <CheckBox
        android:id="@+id/cbDateRange"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />
    <CheckBox
        android:id="@+id/cbCustomTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />
    <CheckBox
        android:id="@+id/cbShortMonth"
        android:layout_width="0dp"
        android:layout_height="0dp"
        />
    <RelativeLayout
        android:id="@+id/graph_month_year"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lineargggg">

    </RelativeLayout>

</RelativeLayout>